@{
    Layout = null;
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"/>
 <link rel="stylesheet" href="~/css/login.css" />

<form>
    <div id="logIn" style="width: 400px; margin: auto;">
        <p class="text-center">用户登录</p>
        <div class="form-group">
            <input type="text" class="form-control" name="username" id="UserName" placeholder="username">
            <span class="hint" id="user">请输入用户名</span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" id="Password1" placeholder="Password">
            <span class="hint" id="pwd">请输入用户密码</span>
        </div>

        <button type="button" class="btn btn-primary " id="userLogIn" 
            style="height:36px; font-size:15px;  width:150px;">登录</button>
        
    </div>

</form>
<script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
